etcd-custom-image:
  template: 'default'
  base_definition:
    repo: ~
    traits:
      version:
          preprocess: 'noop'

  jobs:
    update-version:
      traits:
        cronjob:
          interval: '24h'
      steps:
        update_version:
          image: 'eu.gcr.io/gardener-project/cc/job-image:1.778.0'
          publish_to:
          - source
    head-update:
      trigger: False
      traits:
        publish:
          dockerimages:
            etcd:
              registry: 'gcr-readwrite'
              image: 'eu.gcr.io/gardener-project/gardener/etcd'
              dockerfile: 'Dockerfile'
              tag_as_latest: True
              inputs:
                repos:
                  source: ~
