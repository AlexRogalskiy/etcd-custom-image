etcd-custom-image:
  template: 'default'
  base_definition:
    repo: ~
    traits:
      version:
        preprocess: 'noop'
        versionfile: '../VERSION'
      publish:
        dockerimages:
          etcd:
            registry: 'gcr-readwrite'
            image: 'eu.gcr.io/gardener-project/gardener/etcd'
            dockerfile: 'Dockerfile'
            tag_as_latest: True
            inputs:
              repos:
                source: ~
              steps:
                get_etcd_version: ~
    steps:
      get_etcd_version:
        image: 'eu.gcr.io/gardener-project/cc/job-image:1.778.0'
        output_dir: 'source'

  jobs:
    build-image:
      traits:
        cronjob:
          interval: '24h'
